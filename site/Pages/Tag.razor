@page "/tag/{name}"
@inject SiteContext SiteContext

@code {

    [Parameter]
    public string? Name { get; set; }
}

<div class="page-wrapper">
    <section>
        <div class="container">
            <a href="/" class="btn btn-outline-custom">
                            <i class="mdi mdi-step-backward"></i>
                            Go back
                        </a>
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-title">
                        <div class="row">
                            <div class="col-md-9 col-xs-12">
                                <h2>
                                    <span>Posts related to "@Name"</span>
                                </h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="mt-3 pb-3">
        <div class="container">
            <div class="row">
                <div class="col-xl-8">
                    @{ var posts = SiteContext.Posts.Where(p => p.Tags.Contains(Name)); }
                    @foreach (var post in posts)
                    {
                        <PostTitle Post="@post" />
                    }
                    <Pagination />
                </div>
            </div>
        </div>
    </section>
</div>